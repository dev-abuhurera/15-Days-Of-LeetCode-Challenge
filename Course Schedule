private:
    enum State { UNVISITED, VISITING, VISITED };
    
    bool hasCycle(int course, vector<vector<int>>& graph, vector<State>& state) {
        if (state[course] == VISITING) {
            return true; // Cycle detected
        }
        
        if (state[course] == VISITED) {
            return false; // Already processed, no cycle from this node
        }
        
        // Mark as visiting (in current DFS path)
        state[course] = VISITING;
        
        // Check all neighbors
        for (int neighbor : graph[course]) {
            if (hasCycle(neighbor, graph, state)) {
                return true;
            }
        }
        
        // Mark as visited (completely processed)
        state[course] = VISITED;
        return false;
    }
    
public:
    bool canFinish(int numCourses, vector<vector<int>>& prerequisites) {
        // Build adjacency list
        vector<vector<int>> graph(numCourses);
        for (auto& prereq : prerequisites) {
            int course = prereq[0];
            int prerequisite = prereq[1];
            graph[prerequisite].push_back(course);
        }
        
        vector<State> state(numCourses, UNVISITED);
        
        // Check for cycles starting from each course
        for (int i = 0; i < numCourses; i++) {
            if (hasCycle(i, graph, state)) {
                return false;
            }
        }
        
        return true;
    }
};
