class Solution {
public:
    void inorder(TreeNode* root, vector<int>& result) {
        if (root == NULL) return;

        inorder(root->left, result);   // 1. Left
        result.push_back(root->val);   // 2. Node
        inorder(root->right, result);  // 3. Right
    }

    vector<int> inorderTraversal(TreeNode* root) {
        vector<int> result;
        inorder(root, result);
        return result;
    }
};
